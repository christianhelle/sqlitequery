<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:uap3="http://schemas.microsoft.com/appx/manifest/uap/windows10/3"
  xmlns:uap10="http://schemas.microsoft.com/appx/manifest/uap/windows10/10"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  IgnorableNamespaces="uap uap3 uap10 rescap">

  <!--
    IMPORTANT: Before submitting to the Microsoft Store, update the Identity
    Name and Publisher to match the values from your Partner Center registration.
    You can find these values in Partner Center under:
    Apps > Your App > Product Identity
  -->
  <Identity
    Name="ChristianHelle.SQLiteQueryAnalyzer"
    Version="0.2.0.0"
    Publisher="CN=Christian Resma Helle"
    ProcessorArchitecture="x64" />

  <Properties>
    <DisplayName>SQLite Query Analyzer</DisplayName>
    <PublisherDisplayName>Christian Resma Helle</PublisherDisplayName>
    <Description>A fast and lightweight cross-platform tool for querying and manipulating SQLite databases</Description>
    <Logo>Assets\StoreLogo.png</Logo>
  </Properties>

  <Resources>
    <Resource Language="en-us" />
  </Resources>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.26100.0" />
  </Dependencies>

  <Capabilities>
    <rescap:Capability Name="runFullTrust" />
  </Capabilities>

  <Applications>
    <Application
      Id="SQLiteQueryAnalyzer"
      Executable="SQLiteQueryAnalyzer.exe"
      EntryPoint="Windows.FullTrustApplication"
      uap10:RuntimeBehavior="packagedClassicApp"
      uap10:TrustLevel="mediumIL">

      <uap:VisualElements
        DisplayName="SQLite Query Analyzer"
        Description="A fast and lightweight tool for querying and manipulating SQLite databases"
        Square150x150Logo="Assets\Square150x150Logo.png"
        Square44x44Logo="Assets\Square44x44Logo.png"
        BackgroundColor="transparent">
        <uap:DefaultTile
          Wide310x150Logo="Assets\Wide310x150Logo.png"
          Square71x71Logo="Assets\SmallTile.png"
          Square310x310Logo="Assets\LargeTile.png" />
        <uap:SplashScreen Image="Assets\SplashScreen.png" BackgroundColor="#1e1e1e" />
      </uap:VisualElements>

      <Extensions>
        <uap3:Extension Category="windows.fileTypeAssociation">
          <uap3:FileTypeAssociation Name="sqlite">
            <uap:SupportedFileTypes>
              <uap:FileType>.sqlite</uap:FileType>
              <uap:FileType>.sqlite3</uap:FileType>
              <uap:FileType>.db</uap:FileType>
            </uap:SupportedFileTypes>
            <uap:DisplayName>SQLite Database</uap:DisplayName>
          </uap3:FileTypeAssociation>
        </uap3:Extension>
      </Extensions>

    </Application>
  </Applications>

</Package>
